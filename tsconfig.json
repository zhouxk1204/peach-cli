{
  "compilerOptions": {
    "target": "ES2019",                // 编译到 Node 12+ 可用的 JS 语法
    "module": "Node16",                 // Node16 ESM 模式
    "moduleResolution": "Node16",       // ESM 模块解析策略
    "strict": true,                      // 开启严格类型检查
    "esModuleInterop": true,             // 支持 import x from 'commonjs-module'
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                // 跳过类型检查第三方库
    "outDir": "dist",                     // 编译输出目录
    "declaration": true,                  // 生成类型声明文件
    "declarationDir": "dist/types",       // 类型声明输出目录
    "resolveJsonModule": true,            // 支持 import json
    "sourceMap": true                     // 可选：生成 sourceMap 方便调试
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "templates/**/*"]
}
